{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "*.json",
      "*.js.map",
      "*.min.js",
      "*.min.css",
      "player/",
      "player-project/dist/",
      "player-project/node_modules/"
    ]
  },
  "linter": {
    "rules": {
      "style": {
        "useTemplate": "off",
        "useImportType": "off"
      },
      "complexity": {
        "noUselessConstructor": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
