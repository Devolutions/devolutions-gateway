{
  "$schema": "https://biomejs.dev/schemas/1.8.2/schema.json",
  "organizeImports":{
    "enabled": true
  },
  "linter": {
    "rules": {
      "style": {
        "useTemplate": "off",
        "useImportType": "off"
      }
    }
  },
  "formatter": {
    "lineWidth": 120,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  }
}
