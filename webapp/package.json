{
  "name": "devolutions-gateway-workspace",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev:gateway": "pnpm --filter gateway-ui dev",
    "dev:player": "pnpm --filter recording-player dev",
    "start": "pnpm --filter gateway-ui start",
    "build:all": "pnpm -r build",
    "build:libs": "pnpm --filter './packages/**' build",
    "build:apps": "pnpm --filter './apps/**' build",
    "build:gateway": "pnpm --filter gateway-ui build",
    "build:player": "pnpm --filter recording-player build",
    "check": "pnpm -r run check --if-present",
    "check:write": "pnpm -r run check:write --if-present",
    "lint": "pnpm -r run lint --if-present",
    "lint:write": "pnpm -r run lint:write --if-present",
    "fmt": "pnpm -r run fmt --if-present",
    "fmt:write": "pnpm -r run fmt:write --if-present",
    "test": "pnpm -r test --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
